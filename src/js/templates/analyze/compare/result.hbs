<div class="fx-analysis-item fit fx-result" data-status="loading">

    <div class="fx-handle"></div>

    <div class="fx-dataset-details-container">
        <!-- Result Title -->
        <span class="fx-dataset-details truncate">{{oda}}</span>
    </div>

    <div class='fx-widget'>

        <ul class="nav nav-tabs small-icons-analysis" role="tablist">

            <li role="presentation" class="active">
                <a href="#fx-tab-table-{{id}}" role="tab" data-toggle="tab" data-visualization="table">
                    {{ tab_table }}
                </a>
            </li>

            <li role="presentation" data-visualization="chart">
                <a href="#fx-tab-chart-{{id}}" role="tab" data-toggle="tab" data-visualization="chart">
                    {{ tab_chart }}
                </a>
            </li>

        </ul>

        <div class="row fit-height">
            <div class="col-xs-12 fit-height">

                <div data-content="ready" class="fit-height">

                    <div class="tab-content fit-height">

                        <div id="fx-tab-table-{{id}}" role="tabpanel" data-visualization="chart" class="tab-pane fade in active">
                            <div data-container>
                                TABLE
                            </div>
                        </div>
                        <div id="fx-tab-chart-{{id}}" role="tabpanel" data-visualization="table" class="tab-pane fade">
                            <div data-container>
                                CHARt
                            </div>
                        </div>
                    </div>

                </div>

                <div data-content="error" class="fit-height">
                    ERROR
                    <button data-action="reload" class="btn btn-default">{{ reload }}</button>

                </div>

                <div data-content="loading" class="fit-height">
                    LOADING
                </div>

            </div>
        </div>

    </div>

</div>