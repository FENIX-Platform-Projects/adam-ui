<li class="adam-result" data-status="loading">

    <!-- header -->
    <div class="row">
        <div class="col-xs-12">
            <div class="row">
                <div class="col-xs-5">
                   <span class="compare-as">

                    {{ compare_as }}

                       <input id="visualization-1" type="radio" name="visualization" value="chart" checked="chacked">
                        <label for="visualization-1">{{ kind_chart }}</label>

                        <input id="visualization-2" type="radio" name="visualization" value="table">
                        <label for="visualization-2">{{ kind_table }}</label>

                    </span>
                </div>

                <div class="col-xs-5">
                    {{oda}}
                </div>

                <div class="col-xs-2">
                    <button data-action="remove" class="btn btn-default pull-right">remove</button>
                </div>
            </div>
        </div>
    </div>
    <!-- content -->
    <div class="row">
        <div class="col-xs-12">
            <div class="tab-container">
                <div data-visualization="chart" class="result-tab">
                     <div data-container></div>
                </div>
                <div data-visualization="table" class="result-tab">
                    <div data-container></div>
                </div>
            </div>
        </div>
    </div>

</li>